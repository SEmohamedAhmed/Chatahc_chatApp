<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="root" alignment="CENTER" style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <HBox spacing="10.0" style="-fx-background-color: #3C5641; -fx-background-radius: 10px;" GridPane.columnIndex="1">
         <children>
            <Label fx:id="messageText" alignment="TOP_LEFT" maxHeight="-Infinity" maxWidth="250.0" minHeight="30.0" minWidth="45.0" text="test" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="Segoe UI" size="20.0" />
               </font>
            </Label>
            <VBox alignment="BOTTOM_CENTER" minWidth="-Infinity" prefHeight="15.0" prefWidth="54.0">
               <children>
                  <Label fx:id="messageTime" alignment="CENTER" prefHeight="29.0" prefWidth="54.0" text="time" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                     <font>
                        <Font name="Segoe UI" size="20.0" />
                     </font>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </children>
         <GridPane.margin>
            <Insets right="12.0" />
         </GridPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</GridPane>
